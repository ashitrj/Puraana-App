<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a single list item in the list of pets -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/activity_margin">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#FFEB3B"
            android:gravity="center"/>
        <TextView
            android:id="@+id/Provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD"
            android:gravity="center"/>

        <TextView
            android:id="@+id/product_price_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#FF3B3B"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:textColor="#000000"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="Contact:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detail_contact"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#000000"/>

            <ImageButton
                android:id="@+id/detail_phone_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/color_detail_button"
                android:contentDescription="@string/content_desc_phone"
                android:src="@drawable/ic_phone"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>